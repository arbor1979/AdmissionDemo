        <activity
            android:name="com.dandian.admissiondemo.activity.AlbumShowImageDetail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.ChangePwdActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.ContactsSelectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.ContactsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.ChatMsgActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustUnspecified" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.SchoolActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.SchoolDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.WebSiteActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.ImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dandian.admissiondemo.activity.ShowPersonInfo"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dandian.admissiondemo.activity.CourseClassActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
