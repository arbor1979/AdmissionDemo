        <activity
            android:name="com.dandian.admissiondemo.activity.SubmitDataActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.AlbumFlowActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dandian.admissiondemo.activity.AlbumShowImagePage"
            android:screenOrientation="portrait" >
